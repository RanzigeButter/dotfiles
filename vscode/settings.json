{
  // ===========================================================================
  // # General
  // ===========================================================================
  "window.title": "${rootName}${separator}${activeEditorShort}${dirty}",
  "window.titleSeparator": " âžœ ",
  "window.newWindowDimensions": "maximized",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
  "terminal.integrated.rendererType": "canvas",
  // Online Services
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "update.enableWindowsBackgroundUpdates": false,
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  // ===========================================================================
  // # Appearance
  // ===========================================================================
  "workbench.colorTheme": "Horizon",
  "workbench.iconTheme": "vscode-icons",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  // VS Icons
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.presets.foldersAllDefaultIcon": true,
  "vsicons.presets.jsOfficial": true,
  "vsicons.presets.tsOfficial": true,
  "vsicons.associations.files": [
    {
      "icon": "nginx",
      "extensions": ["conf"],
      "format": "svg"
    },
    {
      "icon": "webpack",
      "extensions": ["webpack.settings.js"],
      "filename": true,
      "format": "svg"
    }
  ],
  // ===========================================================================
  // # Editor
  // ===========================================================================
  "workbench.editor.openPositioning": "last",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.tree.indent": 14,
  "breadcrumbs.enabled": false,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.minimap.showSlider": "always",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.occurrencesHighlight": false,
  "editor.selectionHighlight": false,
  "editor.hover.delay": 750,
  "editor.dragAndDrop": false,
  "editor.codeLens": false,
  "editor.links": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80],
  "files.trimFinalNewlines": true,
  // ===========================================================================
  // # Formatting
  // ===========================================================================
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "json.format.enable": false,
  "twig-language-2.formatting": false,
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  // ===========================================================================
  // # Languages
  // ===========================================================================
  // Markdown
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.extension.italic.indicator": "_",
  "markdownlint.config": {
    "MD012": {
      "maximum": 2
    },
    "MD013": false,
    "MD024": {
      "siblings_only": true
    },
    "MD033": false
  },
  // PHP
  "php.validate.executablePath": "C:\\Program Files\\PHP-7.4.0\\php.exe",
  "php.suggest.basic": false,
  // Stylesheets
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // JavaScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",
  // ===========================================================================
  // # Miscellaneous
  // ===========================================================================
  // Hide folders/files
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true
  }
}

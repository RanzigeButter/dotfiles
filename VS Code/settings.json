{
  // ======================================================================== //
  // # General
  // ======================================================================== //
  "window.title": "${rootName}${separator}${activeEditorShort}${dirty}",
  "window.newWindowDimensions": "maximized",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
  "terminal.integrated.rendererType": "canvas",
  // Microsoft Online Services
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "update.enableWindowsBackgroundUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "workbench.enableExperiments": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  // ======================================================================== //
  // # Appearance
  // ======================================================================== //
  "workbench.colorTheme": "Horizon",
  "workbench.iconTheme": "vscode-icons",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  // VS Icons
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.presets.foldersAllDefaultIcon": true,
  "vsicons.presets.jsOfficial": true,
  "vsicons.presets.tsOfficial": true,
  "vsicons.associations.files": [
    {
      "icon": "nginx",
      "extensions": ["conf"],
      "format": "svg"
    },
    {
      "icon": "webpack",
      "extensions": ["webpack.config.settings.js"],
      "filename": true,
      "format": "svg"
    }
  ],
  // ======================================================================== //
  // # Editor
  // ======================================================================== //
  "workbench.editor.openPositioning": "last",
  "workbench.editor.highlightModifiedTabs": true,
  "breadcrumbs.enabled": false,
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.minimap.showSlider": "always",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.occurrencesHighlight": false,
  "editor.selectionHighlight": false,
  "editor.hover.delay": 750,
  "editor.dragAndDrop": false,
  "editor.codeLens": false,
  "editor.links": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80],
  "files.trimFinalNewlines": true,
  // ======================================================================== //
  // # Formatting
  // ======================================================================== //
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "json.format.enable": false,
  "twig-language-2.formatting": false,
  "prettier.disableLanguages": [
    "markdown",
    "html",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // ======================================================================== //
  // # Languages
  // ======================================================================== //
  // Markdown
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,
  "markdown.extension.toc.githubCompatibility": true,
  "markdown.extension.italic.indicator": "_",
  "markdownlint.config": {
    "MD012": {
      "maximum": 2
    },
    "MD013": false,
    "MD024": {
      "siblings_only": true
    },
    "MD033": false
  },
  // LaTeX
  "latex-workshop.message.update.show": false,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "biber",
      "command": "biber",
      "args": ["%DOCFILE%"]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex -> biber -> pdflatex*2",
      "tools": ["pdflatex", "biber", "pdflatex", "pdflatex"]
    },
    {
      "name": "pdflatex",
      "tools": ["pdflatex"]
    }
  ],
  // PHP
  "php.validate.executablePath": "C:\\Program Files\\PHP-7.4.0\\php.exe",
  "php.suggest.basic": false,
  // Stylesheets
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // JavaScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",
  // ======================================================================== //
  // # Miscellaneous
  // ======================================================================== //
  // Hide folders/files from the tree view.
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true
  }
}

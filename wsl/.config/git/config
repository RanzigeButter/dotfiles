[init]
  defaultBranch = main

[core]
  editor = code --wait

[alias]
  c = git commit -m
  ac = !git add . && git commit -m
  aca = !git add . && git commit --amend --no-edit
  undo = reset --soft HEAD~1
  sh = push origin
  ll = pull --rebase origin
  co = checkout
  cob = checkout -b
  bd = branch -d
  bdr = push --delete origin
  f = fetch --prune
  l = log --graph --pretty=format:'%C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(blue)<%an>%C(reset)'
  ls = log --oneline --graph --stat
